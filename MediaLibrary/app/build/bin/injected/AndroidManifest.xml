<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.tikay.medialibrary"
	android:versionCode="1"
	android:versionName="10.1.0">

	<uses-sdk
		android:minSdkVersion="9"
		android:targetSdkVersion="25"/>

	<uses-permission
		android:name="android.permission.READ_EXTERNAL_STORAGE"/>

	<uses-permission
		android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

	<uses-permission
		android:name="android.permission.READ_LOGS"/>

	<application
		android:allowBackup="true"
		android:name=".application.MyApp"
		android:alwaysRetainTaskState="true"
		android:icon="@drawable/icon"
		android:label="@string/app_name"
		android:theme="@style/AppTheme">

		<activity
			android:name=".activities.MainActivity"
			android:launchMode="singleTask"
			android:label="@string/app_name">

			<intent-filter>

				<action
					android:name="android.intent.action.MAIN"/>

				<category
					android:name="android.intent.category.LAUNCHER"/>

			</intent-filter>

		</activity>

		<activity
			android:name=".activities.PlaylistTracks"
			android:alwaysRetainTaskState="true"
			android:launchMode="singleTask"
			android:label="@string/app_name"
			android:parentActivityName=".activities.MainActivity">

			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".activities.MainActivity"/>

		</activity>

		<activity
			android:name=".activities.AlbumTracks"
			android:alwaysRetainTaskState="true"
			android:launchMode="singleTask"
			android:label="@string/app_name"
			android:parentActivityName=".activities.MainActivity">

			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".activities.MainActivity"/>

		</activity>

		<activity
			android:name=".activities.ArtistTracks"
			android:alwaysRetainTaskState="true"
			android:launchMode="singleTask"
			android:label="@string/app_name"
			android:parentActivityName=".activities.MainActivity">

			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".activities.MainActivity"/>

		</activity>

		<activity
			android:name=".activities.GenreTracks"
			android:alwaysRetainTaskState="true"
			android:launchMode="singleTask"
			android:label="@string/app_name"
			android:parentActivityName=".activities.MainActivity">

			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".activities.MainActivity"/>

		</activity>

		<activity
			android:name=".activities.FolderSinglePane"
			android:alwaysRetainTaskState="true"
			android:launchMode="singleTask"
			android:label="@string/app_name"
			android:parentActivityName=".activities.MainActivity">

			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".activities.MainActivity"/>

		</activity>

		<service
			android:enabled="true"
			android:exported="true"
			android:name=".service.MediaService">

		</service>

	</application>

</manifest>

