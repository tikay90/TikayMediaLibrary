	<style name="FabStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_margin">@dimen/spacing_large</item>
		<item name="borderWidth">0dp</item>
		<item name="elevation">10dp</item>
		<item name="pressedTranslationZ">12dp</item>
		<item name="rippleColor">@android:color/white</item>
	</style>
	
	<style name="CustomToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
		<item name="android:textColorPrimary">#fff</item>
		<item name="android:textColorSecondary">@color/colorAccent</item>
		<item name="android:textColorTertiary">#000000</item>
	</style>

	<color name="act_import_file">#7A4B42</color>
