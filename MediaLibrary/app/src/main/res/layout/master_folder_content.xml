<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	app:cardBackgroundColor="@android:color/white"
	app:cardCornerRadius="2dp"
	app:cardUseCompatPadding="true"
	app:contentPadding="5dp"
	android:id="@+id/cv_folder_details"
	android:layout_height="wrap_content">
	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:weightSum="@integer/windowWeightSum"
		android:layout_margin="10dp">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="0dp"
			android:orientation="vertical"
			android:layout_weight="@integer/min_weight"
			android:gravity="center"
			android:layout_marginRight="2dp">

			<ImageView
				android:layout_height="50dp"
				android:layout_width="50dp"
				android:id="@+id/iv_folder_img"
				android:scaleType="centerCrop"
				android:src="@drawable/blue_folder"
				android:adjustViewBounds="true"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="0dp"
			android:orientation="vertical"
			android:layout_weight="@integer/max_weight">

			<TextView
				android:id="@+id/tvFolder_Song_title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:text="Song Title"
				android:singleLine="true"
				android:textSize="14sp"/>

			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="match_parent"
				android:singleLine="true"
				android:id="@+id/tvFolderPath"
				android:text="Small Text"
				android:textSize="12sp"/>

		</LinearLayout>

	</LinearLayout>
</android.support.v7.widget.CardView>
