<?xml version="1.0" encoding="utf-8"?>
<com.andexert.library.RippleView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/more"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="1dp"
	android:background="@android:color/white"
  app:rv_centered="true"
	app:rv_rippleDuration="@integer/ripple_duration" 
	app:rv_type="doubleRipple"
	app:rv_zoom="true"
	app:rv_ripplePadding="2dp"
	app:rv_color="#62AEE3" >
	
<android.support.v7.widget.CardView
	android:layout_width="match_parent"
	app:cardBackgroundColor="@android:color/white"
	app:cardCornerRadius="2dp"
	app:cardUseCompatPadding="true"
	app:contentPadding="2dp"
	android:id="@+id/cv_folder_content_details"
	android:layout_height="wrap_content">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:weightSum="@integer/windowWeightSum"
		android:layout_margin="10dp">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="0dp"
			android:orientation="vertical"
			android:layout_weight="@integer/fcd_min_weight"
			android:gravity="center"
			android:layout_marginRight="8dp">

			<ImageView
				android:layout_height="@dimen/folder_iv_wh"
				android:layout_width="@dimen/folder_iv_wh"
				android:id="@+id/iv_folder_img"
				android:scaleType="centerCrop"
				android:adjustViewBounds="true"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="0dp"
			android:orientation="vertical"
			android:layout_weight="@integer/fcd_max_weight">

			<TextView
				android:id="@+id/tvFolder_Song_title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:text="Song Title"
				android:singleLine="true"
				android:textSize="17sp"/>

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:singleLine="true"
				android:id="@+id/tvFolderPath"
				android:textSize="14sp"
				android:text="Small Text"/>

		</LinearLayout>

	</LinearLayout>

</android.support.v7.widget.CardView>
</com.andexert.library.RippleView>
